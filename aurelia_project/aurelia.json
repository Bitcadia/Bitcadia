{
  "name": "Bitcadia",
  "type": "project:application",
  "platform": {
    "id": "web",
    "displayName": "Web",
    "output": "scripts",
    "index": "index.html",
    "baseDir": ".",
    "port": 9000
  },
  "transpiler": {
    "id": "typescript",
    "displayName": "TypeScript",
    "fileExtension": ".ts",
    "source": "src/**/*.ts",
    "dtsSource": [
      "./custom_typings/**/*.d.ts"
    ]
  },
  "markupProcessor": {
    "id": "minimum",
    "displayName": "Minimal Minification",
    "fileExtension": ".html",
    "source": "src/**/*.html"
  },
  "cssProcessor": {
    "id": "postcss",
    "displayName": "Post CSS",
    "fileExtension": ".css",
    "source": "src\\**\\*.css"
  },
  "scssProcessor": {
    "id": "postcss",
    "displayName": "SCSS",
    "fileExtension": ".scss",
    "source": "src\\**\\*.scss",
    "includePaths": [
      "./node_modules/bootstrap/scss",
      "./node_modules/@fortawesome/fontawesome-free/scss/"
    ],
    "includedFontPaths": [
      "./node_modules/@fontawesome/fontawesome-free/webfonts/*.{woff,woff2,ttf,svg,eot}"
    ],
    "fontOut": "./scripts/fonts"
  },
  "jsonProcessor": {
    "id": "none",
    "displayName": "None",
    "fileExtension": ".json",
    "source": "src/**/*.json"
  },
  "localeProcessor": {
    "source": "src/locales/**/*.json"
  },
  "editor": {
    "id": "vscode",
    "displayName": "Visual Studio Code"
  },
  "unitTestRunner": {
    "id": "karma",
    "displayName": "Karma",
    "source": "test/unit/**/*.ts"
  },
  "paths": {
    "root": "src",
    "resources": "resources",
    "elements": "resources/elements",
    "attributes": "resources/attributes",
    "valueConverters": "resources/value-converters",
    "bindingBehaviors": "resources/binding-behaviors",
    "node_modules": "../node_modules"
  },
  "testFramework": {
    "id": "mocha",
    "displayName": "Mocha"
  },
  "build": {
    "targets": [
      {
        "id": "web",
        "displayName": "Web",
        "port": 9000,
        "index": "index.html",
        "baseDir": ".",
        "output": "scripts"
      }
    ],
    "loader": {
      "type": "require",
      "configTarget": "vendor-bundle.js",
      "includeBundleMetadataInConfig": "auto",
      "plugins": [
        {
          "name": "text",
          "extensions": [
            ".html",
            ".css",
            ".json"
          ],
          "stub": true
        }
      ],
      "config": {
        "map": {
          "*": {
            "topojson": "topojson-client",
            "jasny": "node_modules/jasny-bootstrap/js",
            "uuid/lib/rng": "uuid/lib/rng-browser",
            "uuid/lib/sha1": "uuid/lib/sha1-browser",
            "jquerymodule": "node_modules/jquery/src/",
            "bootstrapmodule": "node_modules/bootstrap/js/dist/",
            "pouchdb-utils": "pouchdb-utils/index-browser"
          },
          "transform-pouch/pouch-utils": {
            "pouchdb-promise": "lib/pouchdb-promise-stub"
          }
        },
        "wrapShim": true
      }
    },
    "options": {
      "minify": "stage & prod",
      "sourcemaps": "dev & stage",
      "rev": false,
      "cache": "dev & stage"
    },
    "bundles": [
      {
        "name": "app-bundle.js",
        "source": [
          "**/*.{js,json,css,html}"
        ]
      },
      {
        "name": "vendor-bundle.js",
        "prepend": [
          "node_modules/bluebird/js/browser/bluebird.core.js",
          "node_modules/@fortawesome/fontawesome-free/js/all.js",
          {
            "path": "node_modules/aurelia-cli/lib/resources/scripts/configure-bluebird-no-long-stacktraces.js",
            "env": "stage & prod"
          },
          {
            "path": "node_modules/aurelia-cli/lib/resources/scripts/configure-bluebird.js",
            "env": "dev"
          },
          "node_modules/alameda/alameda.js",
          "scripts/global.js"
        ],
        "dependencies": [
          "argsarray",
          "aurelia-binding",
          "aurelia-bootstrapper",
          "aurelia-dependency-injection",
          "aurelia-event-aggregator",
          "aurelia-framework",
          "aurelia-history-browser",
          "aurelia-history",
          "aurelia-loader-default",
          "aurelia-loader",
          "aurelia-logging-console",
          "aurelia-logging",
          "aurelia-metadata",
          "aurelia-pal-browser",
          "aurelia-pal",
          "aurelia-path",
          "aurelia-polyfills",
          "aurelia-route-recognizer",
          "aurelia-router",
          "aurelia-task-queue",
          "aurelia-templating-binding",
          "aurelia-templating",
          "events",
          "immediate",
          "js-extend",
          "lie",
          "lodash.isnull",
          "marked",
          "ms",
          "pouchdb-abstract-mapreduce",
          "pouchdb-collate",
          "pouchdb-collections",
          "pouchdb-errors",
          "pouchdb-extend",
          "pouchdb-mapreduce-utils",
          "pouchdb-promise",
          "pouchdb-selector-core",
          "pouchdb-wrappers",
          "promise-nodify",
          "reflect-metadata",
          "spark-md5",
          "text",
          "uuid",
          "vuvuzela",
          {
            "name": "jquery",
            "path": "../node_modules/jquery/",
            "lazyMain": true
          },
          {
            "name": "bootstrap",
            "path": "../node_modules/bootstrap",
            "lazyMain": true
          },
          {
            "name": "validate.io-undefined",
            "path": "../node_modules/validate.io-undefined",
            "main": "lib/index"
          },
          {
            "name": "pouchdb-find",
            "path": "../node_modules/pouchdb-find/lib",
            "main": "index-browser"
          },
          {
            "name": "pouchdb",
            "path": "../node_modules/pouchdb/dist",
            "main": "pouchdb"
          },
          {
            "name": "pouchdb-utils",
            "path": "../node_modules/pouchdb-utils/lib",
            "main": "index-browser.js"
          },
          {
            "name": "pouchdb-md5",
            "path": "../node_modules/pouchdb-md5/lib/index-browser.js"
          },
          {
            "name": "pouchdb-binary-utils",
            "path": "../node_modules/pouchdb-binary-utils/lib/index-browser.js"
          },
          {
            "name": "pouchdb-binary-utils",
            "path": "../node_modules/pouchdb-binary-utils/lib/index-browser.js"
          },
          {
            "name": "bluebird",
            "path": "../node_modules/bluebird/js/browser",
            "main": "bluebird"
          },
          {
            "name": "process",
            "path": "../node_modules/process",
            "main": "browser"
          },
          {
            "name": "inherits",
            "path": "../node_modules/inherits",
            "main": "inherits_browser"
          },
          {
            "name": "transform-pouch",
            "path": "../node_modules/transform-pouch",
            "main": "index"
          },
          {
            "name": "i18next",
            "path": "../node_modules/i18next/dist/umd",
            "main": "i18next"
          },
          {
            "name": "lodash",
            "path": "../node_modules/lodash-amd",
            "lazyMain": true
          },
          {
            "name": "topojson-client",
            "path": "../node_modules/topojson-client/dist",
            "main": "topojson-client"
          },
          {
            "name": "aurelia-i18n",
            "path": "../node_modules/aurelia-i18n/dist/amd",
            "main": "aurelia-i18n"
          },
          {
            "name": "aurelia-dialog",
            "path": "../node_modules/aurelia-dialog/dist/amd",
            "main": "aurelia-dialog"
          },
          {
            "name": "i18next-xhr-backend",
            "path": "../node_modules/i18next-xhr-backend/dist/umd",
            "main": "i18nextXHRBackend"
          },
          {
            "name": "aurelia-templating-resources",
            "path": "../node_modules/aurelia-templating-resources/dist/amd",
            "main": "aurelia-templating-resources"
          },
          {
            "name": "aurelia-templating-router",
            "path": "../node_modules/aurelia-templating-router/dist/amd",
            "main": "aurelia-templating-router"
          },
          {
            "name": "aurelia-testing",
            "path": "../node_modules/aurelia-testing/dist/amd",
            "main": "aurelia-testing",
            "env": "dev"
          },
          {
            "name": "aurelia-validation",
            "path": "../node_modules/aurelia-validation/dist/amd",
            "main": "aurelia-validation",
            "resources": []
          }
        ]
      },
      {
        "name": "test-bundle.js",
        "prepend": [
          "node_modules/sinon/pkg/sinon.js"
        ],
        "dependencies": [
          {
            "name": "chai",
            "path": "../node_modules/chai",
            "main": "chai"
          }
        ]
      }
    ]
  }
}
