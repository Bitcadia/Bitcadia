{
  "name": "Bitcadia",
  "type": "project:application",
  "platform": {
    "id": "web",
    "displayName": "Web",
    "output": "scripts",
    "index": "index.html",
    "baseDir": ".",
    "port": 9000
  },
  "prodPlatform": {
    "id": "webBundle",
    "displayName": "webBundle",
    "output": "out",
    "index": "index.prod.html",
    "baseDir": ".",
    "port": 9001
  },
  "transpiler": {
    "id": "typescript",
    "displayName": "TypeScript",
    "fileExtension": ".ts",
    "source": "src/**/*.ts",
    "dtsSource": [
      "./custom_typings/**/*.d.ts"
    ],
    "pathsOutput": "./custom_typings/paths.d.ts"
  },
  "markupProcessor": {
    "id": "minimum",
    "displayName": "Minimal Minification",
    "fileExtension": ".html",
    "source": "src/**/*.html"
  },
  "cssProcessor": {
    "id": "postcss",
    "displayName": "Post CSS",
    "fileExtension": ".css",
    "source": "src\\**\\*.css"
  },
  "scssProcessor": {
    "id": "postcss",
    "displayName": "SCSS",
    "fileExtension": ".scss",
    "source": "src\\**\\*.scss",
    "includePaths": [
      "./node_modules/bootstrap/scss",
      "./node_modules/@fortawesome/fontawesome-free/scss/"
    ],
    "includedFontPaths": [
      "./node_modules/@fontawesome/fontawesome-free/webfonts/*.{woff,woff2,ttf,svg,eot}"
    ],
    "fontOut": "./scripts/fonts"
  },
  "jsonProcessor": {
    "id": "none",
    "displayName": "None",
    "fileExtension": ".json",
    "source": "src/**/*.json"
  },
  "editor": {
    "id": "vscode",
    "displayName": "Visual Studio Code"
  },
  "unitTestRunner": {
    "id": "karma",
    "displayName": "karma",
    "source": "scripts/**/*.js",
    "port": 9876,
    "coverage": "integration/coverage-jest/coverage-final.json",
    "exempt": {
      "aurelia-bootstrapper/dist/commonjs/aurelia-bootstrapper.js": ["ready", "initializePal"]
    }
  },
  "paths": {
    "root": "src",
    "node_modules": "../node_modules"
  },
  "testFramework": {
    "id": "mocha",
    "displayName": "Mocha"
  },
  "packageManager": "yarn",
  "build": {
    "targets": [{
      "id": "web",
      "displayName": "Web",
      "port": 9000,
      "index": "index.html",
      "baseDir": ".",
      "output": "scripts"
    }],
    "loader": {
      "type": "require",
      "configTarget": "vendor-bundle.js",
      "includeBundleMetadataInConfig": "false",
      "plugins": [{
        "name": "text",
        "extensions": [
          ".html",
          ".css",
          ".json"
        ],
        "omit": true
      }],
      "config": {
        "baseUrl": "scripts",
        "map": {
          "*": {
            "jquery": "lib/jqglobal",
            "topojson": "topojson-client",
            "jasny": "node_modules/jasny-bootstrap/js",
            "uuid/lib/rng": "uuid/lib/rng-browser",
            "uuid/lib/sha1": "uuid/lib/sha1-browser",
            "bootstrapmodule": "node_modules/bootstrap/js/dist/"
          },
          "transform-pouch/pouch-utils": {
            "pouchdb-promise": "lib/pouchdb-promise-stub"
          },
          "lib/jqglobal": {
            "jquery": "jquery"
          }
        },
        "wrapShim": true
      }
    },
    "options": {
      "minify": "stage & prod",
      "sourcemaps": "dev & stage",
      "rev": false,
      "cache": "dev & stage"
    },
    "bundles": [{
        "name": "app-bundle.js",
        "main": "main",
        "source": [
          "**/*.{js,json,css,html}",
          "!**/*.spec.{js,json,css,html}"
        ],
        "omitAlias": ["resources"]
      },
      {
        "name": "aurelia-karma.js",
        "source": [
          "**/*.spec.{js,json,css,html}"
        ],
        "prepend": [
          "node_modules/sinon/pkg/sinon-1.17.7.js",
          "node_modules/alameda/alameda.js",
          "src/test/aurelia-karma.js"
        ],
        "pullConfig": true,
        "dependencies": [
          "mocha",
          {
            "name": "chai",
            "path": "../node_modules/chai/",
            "main": "chai"
          }, {
            "name": "sinon",
            "path": "../node_modules/sinon/pkg/",
            "main": "sinon"
          }
        ]
      },
      {
        "name": "vendor-bundle.js",
        "prepend": [
          "node_modules/alameda/alameda.js"
        ],
        "dependencies": [
          "argsarray",
          "aurelia-binding",
          "aurelia-bootstrapper",
          "aurelia-dependency-injection",
          "aurelia-dialog",
          "aurelia-event-aggregator",
          "aurelia-framework",
          "aurelia-history-browser",
          "aurelia-history",
          "aurelia-i18n",
          "aurelia-loader-default",
          "aurelia-loader",
          "aurelia-logging-console",
          "aurelia-logging",
          "aurelia-metadata",
          "aurelia-pal-browser",
          "aurelia-pal",
          "aurelia-path",
          "aurelia-polyfills",
          "aurelia-route-recognizer",
          "aurelia-router",
          "aurelia-task-queue",
          "aurelia-templating-binding",
          "aurelia-templating-router",
          "aurelia-templating",
          "aurelia-testing",
          "aurelia-validation",
          "bluebird",
          "bootstrap",
          "browserify-sign",
          "events",
          "i18next",
          "immediate",
          "inherits",
          "jquery",
          "js-extend",
          "lie",
          "lodash.isnull",
          "lodash",
          "marked",
          "ms",
          "pouchdb-abstract-mapreduce",
          "pouchdb-collate",
          "pouchdb-collections",
          "pouchdb-errors",
          "pouchdb-extend",
          "pouchdb-mapreduce-utils",
          "pouchdb-promise",
          "pouchdb-selector-core",
          "pouchdb-wrappers",
          "process",
          "promise-nodify",
          "reflect-metadata",
          "spark-md5",
          "topojson-client",
          "transform-pouch",
          "uuid",
          "validate.io-undefined",
          "vuvuzela",
          {
            "name": "fontawesome",
            "path": "../node_modules/@fortawesome/fontawesome-free/js/",
            "main": "all"
          },
          {
            "name": "pouchdb-find",
            "path": "../node_modules/pouchdb-find/lib",
            "main": "index-browser"
          },
          {
            "name": "pouchdb",
            "path": "../node_modules/pouchdb/dist",
            "main": "pouchdb"
          },
          {
            "name": "pouchdb-utils",
            "path": "../node_modules/pouchdb-utils/lib",
            "main": "index-browser.js"
          },
          {
            "name": "pouchdb-md5",
            "path": "../node_modules/pouchdb-md5/lib/index-browser.js"
          },
          {
            "name": "pouchdb-binary-utils",
            "path": "../node_modules/pouchdb-binary-utils/lib/index-browser.js"
          },
          {
            "name": "i18next-xhr-backend",
            "path": "../node_modules/i18next-xhr-backend/dist/umd",
            "main": "i18nextXHRBackend"
          },
          {
            "name": "aurelia-templating-resources",
            "path": "../node_modules/aurelia-templating-resources/dist/amd",
            "main": "aurelia-templating-resources"
          }
        ]
      }
    ]
  }
}
