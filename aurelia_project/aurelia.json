{
  "name": "bitcadia",
  "type": "project:application",
  "platform": {
    "id": "web",
    "displayName": "Web",
    "output": "scripts",
    "index": "index.html",
    "baseDir": "."
  },
  "transpiler": {
    "id": "typescript",
    "displayName": "TypeScript",
    "fileExtension": ".ts",
    "dtsSource": [
      "./custom_typings/**/*.d.ts"
    ],
    "source": "src/**/*.ts"
  },
  "markupProcessor": {
    "id": "minimum",
    "displayName": "Minimal Minification",
    "fileExtension": ".html",
    "source": "src/**/*.html"
  },
  "cssProcessor": {
    "id": "postcss",
    "displayName": "Post CSS",
    "fileExtension": ".css",
    "source": "src\\**\\*.css"
  },
  "scssProcessor": {
    "id": "postcss",
    "displayName": "SCSS",
    "fileExtension": ".scss",
    "source": "src\\**\\*.scss",
    "includePaths": [
      "./node_modules/bootstrap/scss",
      "./node_modules/font-awesome/scss"
    ],
    "includedFontPaths": [
      "./node_modules/font-awesome/fonts/*.{woff,woff2,ttf,svg,eot}"
    ],
    "fontOut": "./scripts/fonts"
  },
  "localeProcessor": {
    "source": "src/locales/**/*.json"
  },
  "editor": {
    "id": "vscode",
    "displayName": "Visual Studio Code"
  },
  "unitTestRunner": {
    "id": "karma",
    "displayName": "Karma",
    "source": "test/unit/**/*.ts"
  },
  "paths": {
    "root": "src",
    "resources": "resources",
    "elements": "resources/elements",
    "attributes": "resources/attributes",
    "valueConverters": "resources/value-converters",
    "bindingBehaviors": "resources/binding-behaviors"
  },
  "testFramework": {
    "id": "mocha",
    "displayName": "Mocha"
  },
  "build": {
    "targets": [
      {
        "id": "web",
        "displayName": "Web",
        "output": "scripts",
        "index": "index.html"
      }
    ],
    "loader": {
      "type": "require",
      "configTarget": "vendor-bundle.js",
      "includeBundleMetadataInConfig": "auto",
      "plugins": [
        {
          "name": "text",
          "extensions": [
            ".html",
            ".css"
          ],
          "stub": true
        }
      ],
      "config": {
        "map": {
          "*": {
            "pouchdb": "pouchdb-browser",
            "jquery": "jqglobal",
            "bootstrap": "bsglobal",
            "popper": "popperglobal",
            "jasny": "../node_modules/jasny-bootstrap/js",
            "bsutil": "../node_modules/bootstrap/js/dist/util"
          },
          "jqglobal": {
            "jquery": "../node_modules/jquery"
          },
          "bsglobal": {
            "bootstrap": "../node_modules/bootstrap/js/dist"
          },
          "popperglobal": {
            "popper": "../node_modules/popper.js/dist/umd"
          }
        },
        "shim": {
          "../node_modules/bootstrap/js/dist/util": {
            "deps": [
              "jquery"
            ],
            "exports": "Util"
          },
          "../node_modules/bootstrap/js/dist/alert": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/button": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/carousel": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/collapse": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/dropdown": {
            "deps": [
              "jquery",
              "bsutil",
              "popper"
            ]
          },
          "../node_modules/bootstrap/js/dist/modal": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/popover": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/scrollspy": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/tab": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          },
          "../node_modules/bootstrap/js/dist/tooltip": {
            "deps": [
              "jquery",
              "bsutil"
            ]
          }
        },
        "wrapShim": true
      }
    },
    "options": {
      "minify": "stage & prod",
      "sourcemaps": "dev & stage"
    },
    "bundles": [
      {
        "name": "app-bundle.js",
        "source": [
          "[**/*.js]",
          "**/*.{css,html}"
        ]
      },
      {
        "name": "vendor-bundle.js",
        "prepend": [
          "node_modules/requirejs/require.js",
          "scripts/global.js"
        ],
        "dependencies": [
          "aurelia-binding",
          "aurelia-bootstrapper",
          "aurelia-dependency-injection",
          "aurelia-event-aggregator",
          "aurelia-framework",
          "aurelia-history",
          "aurelia-history-browser",
          "aurelia-loader",
          "aurelia-loader-default",
          "aurelia-logging",
          "aurelia-logging-console",
          "aurelia-metadata",
          "aurelia-pal",
          "aurelia-pal-browser",
          "aurelia-path",
          "aurelia-polyfills",
          "aurelia-route-recognizer",
          "aurelia-router",
          "aurelia-task-queue",
          "aurelia-templating",
          "aurelia-templating-binding",
          "argsarray",
          "events",
          "immediate",
          "js-extend",
          "ms",
          "pouchdb-browser",
          "pouchdb-extend",
          "pouchdb-promise",
          "pouchdb-wrappers",
          "promise-nodify",
          "reflect-metadata",
          "spark-md5",
          "text",
          "vuvuzela",
          {
            "name": "jqglobal",
            "path": "./lib",
            "main": "jqglobal"
          },
          {
            "name": "bsglobal",
            "path": "./lib",
            "main": "bsglobal"
          },
          {
            "name": "popperglobal",
            "path": "./lib",
            "main": "popperglobal"
          },
          {
            "name": "popper",
            "path": "../node_modules/popper.js/dist/umd",
            "main": "popper"
          },
          {
            "name": "bluebird",
            "path": "../node_modules/bluebird/js/browser",
            "main": "bluebird"
          },
          {
            "name": "debug",
            "path": "../node_modules/debug",
            "main": "browser"
          },
          {
            "name": "process",
            "path": "../node_modules/process",
            "main": "browser"
          },
          {
            "name": "inherits",
            "path": "../node_modules/inherits",
            "main": "inherits_browser"
          },
          {
            "name": "transform-pouch",
            "path": "../node_modules/transform-pouch",
            "main": "index"
          },
          {
            "name": "lie",
            "path": "../node_modules/lie/dist",
            "main": "lie"
          },
          {
            "name": "i18next",
            "path": "../node_modules/i18next/dist/umd",
            "main": "i18next"
          },
          {
            "name": "lodash",
            "path": "../node_modules/lodash-amd",
            "main": "main",
            "deps": [
              "./reduce",
              "./map",
              "./flatten",
              "./isString",
              "./each",
              "./zip",
              "./last",
              "./first",
              "./filter"
            ]
          },
          {
            "name": "aurelia-i18n",
            "path": "../node_modules/aurelia-i18n/dist/amd",
            "main": "aurelia-i18n"
          },
          {
            "name": "i18next-xhr-backend",
            "path": "../node_modules/i18next-xhr-backend/dist/umd",
            "main": "i18nextXHRBackend"
          },
          {
            "name": "aurelia-templating-resources",
            "path": "../node_modules/aurelia-templating-resources/dist/amd",
            "main": "aurelia-templating-resources"
          },
          {
            "name": "aurelia-templating-router",
            "path": "../node_modules/aurelia-templating-router/dist/amd",
            "main": "aurelia-templating-router"
          },
          {
            "name": "aurelia-testing",
            "path": "../node_modules/aurelia-testing/dist/amd",
            "main": "aurelia-testing",
            "env": "dev"
          }
        ]
      },
      {
        "name": "app-bundle.js",
        "source": [
          "[**/*.js]",
          "**/*.{css,html}"
        ]
      },
      {
        "name": "test-bundle.js",
        "prepend": [
          "./node_modules/sinon/pkg/sinon.js"
        ],
        "dependencies": [
          {
            "name": "chai",
            "path": "../node_modules/chai",
            "main": "chai"
          }
        ]
      }
    ]
  }
}