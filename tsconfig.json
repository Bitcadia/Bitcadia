{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "sourceMap": true,
    "target": "es2017",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "./node_modules/**/*.d.ts",
    "./aurelia_project/**/*.d.ts",
    "./scripts",
    "./out"
  ],
  "include": [
    "./src/**/*.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
