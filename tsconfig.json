{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "aurelia_project"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./integration/**/*.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
