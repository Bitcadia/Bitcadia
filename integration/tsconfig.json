{
  "compileOnSave": true,
  "compilerOptions": {
    "typeRoots": [
      "../node_modules/@types",
      "../custom_typings",
      "./types"
    ],
    "sourceMap": true,
    "target": "es2018",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "typeAcquisition": {
    "enable": true,
  }
}
